{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES6", "DOM.Iterable"]
  },
  "exclude": ["./dist", "./test"],
  "typedocOptions": {
    "disableOutputCheck": true,
    "exclude": "**/*_test.ts"
  }
}
